#title
	.col-md-2.col-md-offset-2.slogan
		= image_tag('default_pic.png', class: 'photo')
	.col-md-6.slogan
		.h1
	  		= t('home.slogan')
	  	.h2
			= t('home.join_us')
		- if user_signed_in?
			= link_to t('helpers.submit.gift_item.new'), new_user_gift_item_path(current_user), class: 'btn btn-primary btn-lg call-to-action'
		- else
			= link_to t('helpers.submit.gift_item.new'), '#', class: 'btn btn-primary btn-lg call-to-action',
                  data: { toggle: 'modal', target: '#login-modal' }
		.h4
			= t('home.organization')
			= ' '
			= link_to t('home.here'), list_wish_items_path

legend
    = t('helpers.wish_item.featured')
#campaigns-cards
  = render 'wish_items/index_cards', wish_items: WishItem.trending

= link_to t('application.all'), list_wish_items_path, class: 'btn btn-primary'